<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="RojasT_Examen3P.Views.ListadoPeliculasPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <CollectionView x:Name="ListaPeliculas">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Margin="5" Padding="10">
                    <VerticalStackLayout>
                        <Label Text="{Binding Titulo}" FontAttributes="Bold"/>
                        <Label Text="{Binding Genero}" />
                        <Label Text="{Binding AnioEstreno}" />
                        <Label Text="{Binding Calificacion}" />
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>

