<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RojasT_Examen3P.Views.NuevaPeliculaPage">
    <VerticalStackLayout Padding="20">
        <Entry Placeholder="Título" Text="{Binding Titulo}" />
        <Entry Placeholder="Género" Text="{Binding Genero}" />
        <Entry Placeholder="Año de estreno" Keyboard="Numeric" Text="{Binding AnioEstreno}" />
        <Entry Placeholder="Calificación (1-10)" Keyboard="Numeric" Text="{Binding Calificacion}" />
        <Button Text="Guardar Película" Command="{Binding GuardarCommand}" />
    </VerticalStackLayout>
</ContentPage>


